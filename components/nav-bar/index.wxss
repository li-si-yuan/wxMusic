/* components/nav-bar/index.wxss */
.nav-bar {
  display: flex;
  text-align: center;
}

.left, .right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.left-arrow {
  display: none;
}

.left-slot:empty + .left-arrow {
  display: block;
}

.left .left-arrow .image{
  width: 44rpx;
  display: block;
}

.center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.center-title {
  display: none;
}
.center-slot:empty + .center-title {
  display: block;
}